<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#B88800</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalculatorButtonGrey">
        <item name="android:background">#BF4E4E4E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="CalculatorButtonOrange" parent="CalculatorButtonGrey">
        <item name="android:background">#FFA00E</item>
    </style>
    <style name="CalculatorButtonGreen" parent="CalculatorButtonGrey">
        <item name="android:background">#009900</item>
    </style>

</resources>
