<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#707070"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/user_input_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".225"
        android:gravity="center|end"
        android:padding="@dimen/dimen_16dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".775"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2">

            <Button
                android:id="@+id/x_squared_button"
                style="@style/CalculatorButtonGreen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="x^2" />

            <Button
                android:id="@+id/ac_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="#5A5A5A"
                android:onClick="calcClick"
                android:text="AC" />

            <Button
                android:id="@+id/neg_pos_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="#5A5A5A"
                android:onClick="calcClick"
                android:text="+/-" />

            <Button
                android:id="@+id/modulus_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="#5A5A5A"
                android:onClick="calcClick"
                android:text="%" />

            <Button
                android:id="@+id/division_button"
                style="@style/CalculatorButtonOrange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="&#247;" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2">

            <Button
                android:id="@+id/x_cubed_button"
                style="@style/CalculatorButtonGreen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="x^3" />

            <Button
                android:id="@+id/seven_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="7" />

            <Button
                android:id="@+id/eight_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="8" />

            <Button
                android:id="@+id/nine_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="9" />

            <Button
                android:id="@+id/multiply_button"
                style="@style/CalculatorButtonOrange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="X" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2">

            <Button
                android:id="@+id/sin_button"
                style="@style/CalculatorButtonGreen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="sin" />

            <Button
                android:id="@+id/four_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="4" />

            <Button
                android:id="@+id/five_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="5" />

            <Button
                android:id="@+id/six_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="6" />

            <Button
                android:id="@+id/subtract_button"
                style="@style/CalculatorButtonOrange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2">

            <Button
                android:id="@+id/cos_button"
                style="@style/CalculatorButtonGreen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="cos" />

            <Button
                android:id="@+id/one_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="1" />

            <Button
                android:id="@+id/two_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="2" />

            <Button
                android:id="@+id/three_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="3" />

            <Button
                android:id="@+id/add_button"
                style="@style/CalculatorButtonOrange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2">

            <Button
                android:id="@+id/tan_button"
                style="@style/CalculatorButtonGreen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="tan" />

            <Button
                android:id="@+id/zero_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:onClick="calcClick"
                android:text="0" />

            <Button
                android:id="@+id/period_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="." />

            <Button
                android:id="@+id/equals_button"
                style="@style/CalculatorButtonOrange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="=" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>